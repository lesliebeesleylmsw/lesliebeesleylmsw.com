<!DOCTYPE html>
<html>
  {% include "../assets/partials/head.njk" %}
  <body>

    <div class="wrapper">
        <header>
            {% if site.compass.logo %}
            <div class="logo-container">
              <a class="logo" href="{{ page.baseurl }}/" style="background-image: url('{{ site.baseurl }}{{ site.compass.logo }}')"></a>
            </div>
            {% endif %}

            {% if site.compass.author %}
            <div class="author-container"><h1>{{ site.compass.author }}</h1></div>
            {% endif %}

            {% if site.compass.tagline %}
            <div class="tagline-container">
              <p class="tagline">{{ site.compass.tagline }}</p>
              {% if site.compass.tagline2 %}<p class="tagline2">{{ site.compass.tagline2 }}</p>{% endif %}
            </div>
            {% endif %}
        </header>
        <main>
          {% if site.compass.include_content %}
          <div class="content">
            {% block content %}{% endblock %}
          </div>
          {% endif %}
        </main>

        <nav>
          {% include "../assets/partials/nav.njk" %}
        </nav>

        <footer>
          {% include "../assets/partials/footer.njk" %}
        </footer>
    </div>


  </body>
</html>
